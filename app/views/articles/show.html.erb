<h2>記事詳細</h2>
<%= image_tag @article.image.url %>
<p class="show_content"><%= @article.content %></p>
  <% unless @article.user_id == current_user.id %>
    <% if @favorite.present? %>
      <%= link_to 'お気に入り解除',favorite_path(id: @favorite.id),method: :delete, class: 'btn btn-danger favorite_btn' %>
    <% else %>
      <%= link_to 'お気に入り',favorites_path(article_id: @article.id),method: :post, class: 'btn btn-primary favorite_btn' %>
    <% end %>
  <% end %>
<p><%= link_to '記事一覧に戻る',articles_path,class: "btn btn-default return_top" %></p>
