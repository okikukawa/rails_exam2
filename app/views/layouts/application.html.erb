<!DOCTYPE html>
<html>
  <head>
    <title>RailsExam2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
     <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
            <span class="sr-only">Bootstrap</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "facebookclone",articles_path, class: "navbar-brand" %>
        </div>
        <div id="gnavi" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
          <% if logged_in? %>
            <li><%= link_to "プロフィール",user_path(current_user.id) %></li>
            <li><%= link_to "ログアウト",session_path(current_user.id),method: :delete %></li>
          <% else %>
            <li><%= link_to "新規会員登録",new_user_path %></li>
            <li><%= link_to "ログイン",new_session_path %></li>
          <% end %>
          </ul>
        </div>
        </div>
      </nav>
    </header>
     <% flash.each do |key,value| %>
       <%= content_tag(:div,value, class: "#{key}") %>
     <% end %>
    <%= yield %>
    <footer>
      <p>facebook-clone株式会社</p>
      <p>© 2020 DIVE INTO CODE Corp.</p>
    </footer>
  </body>
</html>
